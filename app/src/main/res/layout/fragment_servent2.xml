<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zillusion.fgohelper.servent2">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.gms.ads.AdView
        android:layout_gravity="bottom"
        android:id="@+id/adview_servent2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/Advertise_Google_Example" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="20dp"
        android:src="@android:drawable/ic_menu_search"
        ads:backgroundTint="@android:color/holo_orange_light"
        ads:rippleColor="@android:color/background_dark" />


    <ProgressBar
        android:id="@+id/LoadingprogressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/Serach_Servent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="top">

        </SearchView>

        <ListView
            android:background="@drawable/bg"
            android:id="@+id/listview"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>

</FrameLayout>
